<body class='greenField'>
  <div id='consumption_slider'>
    <%= form_for :consumption, html: {class: 'pure-form pure-form-stacked'}, url:'/consumption/'+params[:car_id]+'/new' do |f| %>
      <fieldset>
        <legend>Post a new consumption for your Tesla</legend>
          <%= label_tag(:range, 'Your consumption in kWh per 100 km of driving')%>
          <%= f.range_field :range, :in => 5..35, :step => 0.1%>
          <input type='text' id='consumption_kWh_enter' placeholder="kWh/100km">
          <%= f.submit 'Submit Consumption', id:'submitConsumption' %>
      </fieldset>
    <% end %>
    <p id='consumption_kWh'>20 kWh/100km</p>
   <% if flash[:invalidConsumption].present? %>
      <p><%= flash[:invalidConsumption] %></p>
  <% end %>
  <%= javascript_include_tag('consumption_slider.js') %>
  </div>
</body>