<h1 style='width:20%; margin:auto; text-align: center;margin-top: 1em; margin-bottom: 1em'>Order New Tesla</h1>
<div id='total_price'>
  <p id='saleAmount'>Total Price $<%= Price.where(name: '3').first.base_price.to_s %><p>
  <p>Federal and Provincial Savings</p>
  <span id='bcSaving' class='savingAmount'> BC </span><span id='onSaving' class='savingAmount' > ON </span><span id='noSaving' class='savingAmount'> No Savings</span><br>
  <p id='savingAmount'></p>
  <p id='savingProvince' style="display:none">na</p>
  <p id='priceAfterSaving'></p>
</div>
  <%= form_for :car, url: '/model3/new' do |f| %>
    <div id="battery_selector" class='config_option'>
      <h2 class='selector_title'>Select Battery</h2>
      <div class="batteryButton">
        <%= f.radio_button :battery, 60, :checked=>true %>
        <span> 60kWh Standard</span> <br>
        <p>EPA range 345km</p>
      </div>
      <div class="batteryButton">
        <%= f.radio_button :battery, 70 %> 70kWh <span id="battery_70_price">$<%= @battery_70_price %></span> <br>
        <p> EPA range 400km</p>
      </div>
      <div class="batteryButton">
        <%= f.radio_button :battery, 80 %> 80kWh <span id="battery_80_price">$<%= @battery_80_price %></span>
        <br>
        <p>EPA range 480km</p>
      </div>
      <%= image_tag('battery.png', height: '280', width: '600', :id=>"tesla_battery") %>
    </div>
    <div id='drive_selector' class='config_option'>
      <h2 class='selector_title'>Select Drivetrain</h2>
        <%= image_tag('drive_train.png', :id=>"drive_train_img") %>
        <div id="rwd_select">
          <p style='width:38%;margin-top: 2em;margin-left: 1.5em'>Standard on model 3 is rear wheel drive. Rear wheel drive model 3 has a separate electric motor at each of the rear wheels, providing high performance acceleration as well as commanding driving dynamics.</p>
        </div>
        <div id="awd_select">
          <p style='width:38%;margin-top: 1em;margin-left: 1.5em'>All wheel drive model 3 has a separate electric motor at each of the 4 wheels. The result is unparalleled handling in all weather conditions</p>
          <p id="awd_price" style='width:38%;margin-top: 1em;margin-left: 1.5em'>$<%= @awd_price %></p>
          <%= f.check_box :awd, :checked_value=>true, :unchecked_value=>false, :checked => false%> All Wheel Drive
        </div>
    </div>
    <div id="wheel_selector" class="config_option">
      <h2 class='selector_title'>Wheel Selections</h2><br>
      <div class="wheelButton">
        <%= image_tag('wheel_17.png',:class => 'wheel_pic') %> <br>
        <%= f.radio_button :wheel, 17, :checked=>true %> 17 inches
        <p>Standard</p>
      </div>
      <div class="wheelButton">
        <%= image_tag('wheel_18.png',:class => 'wheel_pic') %> <br>
        <%= f.radio_button :wheel, 18 %> 18 inches
        <p id="wheel_18_price">$<%= @wheel_18_price %></p>
      </div>
      <div class="wheelButton">
        <%= image_tag('wheel_19.png',:class => 'wheel_pic') %> <br>
        <%= f.radio_button :wheel, 19 %> 19 inches
         <p id="wheel_19_price">$<%= @wheel_19_price %></p>
      </div>
    </div>
    <div id='color_selector' class='config_option'>
    <h2 class='selector_title'>Exterior Colors</h2><br>
      <div id='realCar'>
        <%= image_tag('model3_red.png', height: '90%', width: '80%',:id=>'real_car_pic',data:{
          red: asset_path('model3_red.png'),
          black: asset_path('model3_black.png'),
          white: asset_path('model3_white.png'),
          grey: asset_path('model3_grey.png'),}) %>
      </div>
      <div class="color_select">
        <%= f.radio_button :color, 'red', :checked=>true %> Red
      </div>
      <div class='color_select'>
        <%= f.radio_button :color, 'white' %> White
      </div>
      <div class='color_select'>
        <%= f.radio_button :color, 'black' %> Black
      </div>
      <div class='color_select'>
        <%= f.radio_button :color, 'grey' %> Grey
      </div>
    </div>
    <div id='advancedDriving'>
      <div id='sd_selector' class="config_option">
        <%= image_tag('sd.jpg', height: '60%', width: '60%', :id=>"sd_pic") %>
        <p style="text-align:left;margin-left:1em"> The system is designed to conduct short and long distance trips in cities and on highways with no driver input. For superchargers to be enabled, the driver does not need to plug in the vehicle. </p>
        <p id='sd_price'>$<%= @sd_price %></p>
        <%= f.check_box :sd, :checked_value=>true, :unchecked_value=>false, :checked => false%> Full Self Driving Capability
      </div>
      <div id='ap_selector' class='config_option'>
        <%= image_tag('ap.jpg', height: '60%', width: '60%', :id=>"ap_pic") %>
        <p style="text-align:left;margin-left:1em;margin-top: 2.5em">Powered by 12 ultrasonic sonar sensors, the enhanced autopilot provides an enjoyable driving experience with a full suite of safety equipment that includes pre-collision mitigiation, dynamic radar cruise control with stop-and-go, and automatic lane change. </p>
        <p id='ap_price'>$<%= @ap_price %></p>
        <%= f.check_box :ap, :checked_value=>true, :unchecked_value=>false, :checked => false%> Enhanced Autopilot
      </div>
    </div>
    <p style='width:15%;margin:auto;margin-left:46.25%;margin-top:1em'><%= f.submit "Create Car for Order", :id=>'carOrderSubmit'%></p>
  <% end %>
  <div class='hidden_prices'>
    <p id="base_price_hidden" style='display: none'><%= Price.where(name: '3').first.base_price.to_s %></p>
    <p id="awd_price_hidden" style='display: none'><%= Price.where(name: '3').first.awd_price.to_s %></p>
    <p id="sd_price_hidden" style='display: none'><%= Price.where(name: '3').first.sd_price.to_s %></p>
    <p id="ap_price_hidden" style='display: none'><%= Price.where(name: '3').first.ap_price.to_s %></p>
    <p id="battery_70_price_hidden" style='display: none'><%= Price.where(name: '3').first.battery_70_price.to_s %></p>
    <p id="battery_80_price_hidden" style='display: none'><%= Price.where(name: '3').first.battery_80_price.to_s %></p>
    <p id="battery_90_price_hidden" style='display: none'><%= Price.where(name: '3').first.battery_90_price.to_s %></p>
    <p id="wheel_18_price_hidden" style='display: none'><%= Price.where(name: '3').first.wheel_18_price.to_s %></p>
    <p id="wheel_19_price_hidden" style='display: none'><%= Price.where(name: '3').first.wheel_19_price.to_s %></p>
  </div>
    <%= javascript_include_tag('model3_configurator.js') %>